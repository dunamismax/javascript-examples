{
  "name": "weather-dashboard",
  "version": "1.0.0",
  "description": "A weather dashboard demonstrating API integration and async JavaScript",
  "main": "index.html",
  "scripts": {
    "dev": "esbuild src/js/main.js --bundle --outfile=dist/main.js --servedir=. --watch",
    "build": "esbuild src/js/main.js --bundle --outfile=dist/main.js --minify",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "javascript",
    "weather",
    "api",
    "fetch",
    "async-await",
    "geolocation"
  ],
  "devDependencies": {
    "esbuild": "^0.19.0"
  }
}